{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "nativewind/types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts",
    "index.js"
  ],
  "exclude": [
    "node_modules",
    "babel.config.cjs"
  ],
  "extends": "expo/tsconfig.base"
}
